<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:id="@+id/mainEditText1"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center">

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="7"
				android:id="@+id/b7"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="8"
				android:id="@+id/b8"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="9"
				android:id="@+id/b9"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="+"
				android:id="@+id/badd"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center">

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="4"
				android:id="@+id/b4"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="5"
				android:id="@+id/b5"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="6"
				android:id="@+id/b6"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="-"
				android:id="@+id/bsub"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center">

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="1"
				android:id="@+id/b1"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="2"
				android:id="@+id/b2"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="3"
				android:id="@+id/b3"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="*"
				android:id="@+id/bmul"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center">

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="0"
				android:id="@+id/b0"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="="
				android:id="@+id/beq"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="C"
				android:id="@+id/bac"/>

			<Button
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="/"
				android:id="@+id/bdiv"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

